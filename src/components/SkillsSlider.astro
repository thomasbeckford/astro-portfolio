---
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'
const technologies = await getCollection('technologies')
const firstTechnologies = technologies[0]
const firstHalf = firstTechnologies?.data.data.slice(0, Math.floor(firstTechnologies?.data.data.length / 2));
const secondHalf = firstTechnologies?.data.data.slice(Math.floor(firstTechnologies?.data.data.length / 2));

---

    <div class="wrapper">
      <div class="marquee-text fadeout-horizontal [--speed:15s]">
         <div class="marquee-text-track">
        {firstHalf.concat(firstHalf).map((technology, index) => (
          <>

          <div class="slide" >
            <div class="tag">{technology}</div>
            <Image src={technology.icon} alt={technology.title} width={60} height={60} class="mx-auto"/>
          </div>

</>
        ))}
      </div>
      </div>

      <div class="marquee-text fadeout-horizontal [--direction:reverse]">
        <div class="marquee-text-track">
        {secondHalf.concat(secondHalf).map((technology, index) => (
          <div class="slide tooltip">
            <div class="tag">{technology}</div>
            <Image src={technology.icon} alt={technology.title} width={60} height={60} class="mx-auto " />
          </div>
        ))}
      </div>
      </div>
    </div>




<style>


.wrapper {
    padding: 4.8rem 0px;
    color: white;
    font-size: 4rem;
}
.marquee-text{
  overflow: clip;
}
.marquee-text-track {
  display: flex;
  gap: 1rem;
  animation : marque-move-text var(--speed, 10s) linear infinite var(--direction, forwards);
  width: max-content;
  padding-left: 1;

}

.marquee-text-track:hover {
  animation-play-state: paused;
}

.marquee-text p {
  border: 1px solid white;
  border-radius:999px;
  padding: 1rem 2.5rem
}

.fadeout-horizontal {
  mask-image: linear-gradient(
    to right,
    transparent,
    black 15rem,
    black calc(100% - 15rem),
    transparent
  )
}


.slide .tag {
  position: absolute;

    padding: .2rem .5rem;
    border-radius: 5px;
    opacity: 0;
}

.slide {
    width: 7.5rem;
    height: 7.5rem;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #7974793d;
    border-radius: 10px;
    cursor: pointer;
    transition: all .2s ease-in-out;
    position: relative;
}

.slide img {
  width: 60px;
  height: 60px;
  object-fit: contain;
}





@keyframes marque-move-text{
  to {
    transform: translateX(-50%)
  }
}



    </style>




