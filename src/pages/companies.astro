---
import { Image } from 'astro:assets'
import BaseLayout from '../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'

const companies = await getCollection('companies')
const firstCompany = companies[0]
---

<BaseLayout title="Companies" description="What I like to do">
  <div class="text-center flex flex-col gap-12 md:gap-24 mx-auto">
    <div class="flex flex-col gap-4">
      <h2 class="text-3xl font-bold">Companies I've Worked With</h2>
      <span
        class="px-4 py-1 bg-[#2A303D] rounded-full text-sm inline-block w-fit mx-auto"
      >
        Companies
      </span>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 my-10"
      >
        {
          firstCompany?.data?.companies?.map((company) => (
            <a
              class="text-xl font-semibold text-white bg-[#2a303d] rounded-lg shadow-lg overflow-hidden flex items-center hover:bg-[#2a303dAA] transition-all hover:ring-1  ring-slate-500"
              href={company.link}
              target="_blank"
              rel="noopener noreferrer"
            >
              <div class="p-6 flex flex-col gap-4">
                <Image
                  src={company.icon}
                  alt={company.name}
                  width={48}
                  height={48}
                  class="mx-auto"
                />
                <p class="text-gray-400 text-sm">{company.description}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div></BaseLayout
>
