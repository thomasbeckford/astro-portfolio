---
import { Image } from 'astro:assets'
import Linkedin from '../assets/linkedin.svg'
import Thomas from '../assets/thombeck.png'
import SkillsSlider from '../components/SkillsSlider.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout
  title="Thomas Beckford - Senior Next.js React Developer"
  description="Senior Next.js & React developer with 8+ years experience from Argentina, living in the UK. PayloadCMS specialist available for freelance and full-time opportunities."
  className="flex flex-col items-center min-h-screen py-16 md:py-24"
>
  <div class="max-w-7xl mx-auto px-6 w-full">
    <!-- Main Hero Content -->
    <section class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center py-12">
      <!-- Text Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left space-y-8">
        <!-- Main Headline -->
        <div class="space-y-6">
          <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold leading-tight">
            My name is
            <span
              class="block bg-gradient-to-r from-purple-400 via-blue-400 to-teal-400 bg-clip-text text-transparent animate-gradient-x"
            >
              Thomas
            </span>
          </h1>

          <!-- Subtitle -->
          <div class="space-y-2">
            <p class="text-gray-300 text-2xl leading-relaxed">
              I'm a <strong>software engineer</strong> from
            </p>
            <p class="text-gray-300 text-2xl leading-relaxed">
              Argentina, currently living in the UK
            </p>
          </div>
        </div>

        <!-- Tech Stack Preview -->
        <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
          <span class="tech-tag react">React</span>
          <span class="tech-tag nextjs">Next.js</span>
          <span class="tech-tag nodejs">TailwindCSS</span>
          <span class="tech-tag cms">PayloadCMS</span>
          <span class="tech-tag experience">+8 years exp</span>
        </div>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
        >
          <!-- LinkedIn Button -->
          <a
            href="https://www.linkedin.com/in/thomas-beckford-07520775/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Connect with Thomas Beckford on LinkedIn"
            class="btn-primary group"
          >
            <span>Let's connect</span>
            <Image
              src={Linkedin}
              alt="LinkedIn icon"
              width="24"
              height="24"
              class="ml-3 transition-transform duration-300 group-hover:scale-110"
            />
          </a>

          <!-- Secondary CTA -->
          <a href="/about" class="btn-secondary group">
            <span>Learn more about me</span>
            <svg
              class="ml-2 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Profile Image -->
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <div class="relative group">
          <!-- Simple glowing border -->
          <div
            class="absolute -inset-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 rounded-2xl blur opacity-30 group-hover:opacity-50 transition duration-500 animate-tilt"
          >
          </div>

          <!-- Image wrapper -->
          <div class="relative glass-card rounded-2xl p-2">
            <Image
              src={Thomas}
              alt="Thomas Beckford - Senior Next.js React Developer"
              class="rounded-xl w-80 xl:w-96 shadow-2xl transition-transform duration-300 group-hover:scale-[1.02]"
              loading="eager"
              style={{
                maskImage:
                  'linear-gradient(to bottom, rgba(0,0,0,1) 85%, rgba(0,0,0,0) 100%)',
                viewTransitionName: 'thomas-1',
              }}
            />
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Skills Section -->
  <section class="max-w-6xl mx-auto">
    <SkillsSlider />
  </section>
</BaseLayout>
