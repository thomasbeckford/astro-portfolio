---
import Image from 'astro/components/Image.astro'
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'

const projects = await getCollection('projects')
const allApps = projects.map((project) => project.data.apps).flat()

---

<BaseLayout title="Projects" description="What I have built">
  <div class="text-center flex flex-col gap-16 mx-auto max-w-7xl px-4 py-8">
    <div class="space-y-4">
      <span
        class="px-6 py-2 bg-gray-800/80 border border-gray-700 rounded-full text-sm inline-block w-fit mx-auto text-gray-300"
      >
        Projects
      </span>
      <h1 class="text-3xl md:text-4xl font-bold text-white">My Work</h1>
      <p class="text-gray-400 max-w-2xl mx-auto">A collection of projects I've built, showcasing different technologies and approaches.</p>
    </div>

    <!-- Grid Container: 1 column on mobile, 2 columns on lg+ -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {
        allApps.map((app, index) => (
          <article class="group">
            <a
              href={app?.link}
              target="_blank"
              rel="noopener noreferrer"
              class="block relative border border-gray-800 rounded-xl p-8 hover:border-gray-700 transition-all duration-300 bg-gray-900/50 hover:bg-gray-900/70"
            >
              <!-- Project Image Container -->
              <div class="relative bg-gray-800 rounded-lg overflow-hidden mb-6 aspect-video">
                <Image
                  src={app?.image}
                  alt={app?.title || 'Project image'}
                  class="opacity-30 group-hover:opacity-50 w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
                />
                <!-- Subtle overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-transparent"></div>
              </div>

              <!-- Project Info -->
              <div class="space-y-3">
                <h2 class="text-xl md:text-2xl font-bold text-white group-hover:text-gray-100 transition-colors">
                  {app?.title}
                </h2>
                <p class="text-gray-400 group-hover:text-gray-300 leading-relaxed transition-colors">
                  {app?.description}
                </p>

                <!-- Visit link indicator -->
                <div class="flex items-center gap-2 text-sm text-gray-500 group-hover:text-gray-400 transition-colors pt-2">
                  <span>View project</span>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
              </div>

              <!-- Subtle hover effect -->
              <div class="absolute inset-0 rounded-xl ring-1 ring-gray-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
            </a>
          </article>
        ))
      }
    </div>

    <!-- Optional: If you want to add pagination or show more button -->
    <!-- <div class="mt-12">
      <button class="px-6 py-3 bg-gray-800 hover:bg-gray-700 border border-gray-700 rounded-lg text-gray-300 transition-colors">
        Load More Projects
      </button>
    </div> -->
  </div>
</BaseLayout>